{
  "name": "rimu-tools",
  "author": "Stuart Rackham <srackham@gmail.com>",
  "version": "1.0.0",
  "description": "Tools for editing and processing Rimu Markup",
  "keywords": [
    "rimu",
    "markup",
    "markdown"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://raw.github.com/srackham/rimu-tools/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=0.8"
  },
  "bin": {
    "rimuc": "bin/rimuc.js"
  },
  "files": [
    "bin/rimuc.js",
    "bin/header.rmu",
    "bin/footer.rmu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/srackham/rimu-tools.git"
  },
  "dependencies": {
    "rimu": "^6.0.0"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "nodemon": "^1.4.1",
    "parallelshell": "^2.0.0",
    "tape": "^4.2.0",
    "tslint": "^2.4.2",
    "typescript": "^1.5.3"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint src/rimuc.ts",
    "lint:watch": "nodemon --ext ts --watch src --exec 'npm run lint'",
    "test": "node test/test.js | faucet",
    "test:watch": "nodemon --ext js --watch test --watch bin --exec 'npm run test'",
    "watch": "parallelshell 'npm run build:watch' 'npm run test:watch' 'npm run lint:watch'"
  }
}
