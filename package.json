{
  "name": "rimu-tools",
  "author": "Stuart Rackham <srackham@gmail.com>",
  "version": "1.0.0",
  "description": "Tools for editing and processing Rimu Markup",
  "keywords": [
    "rimu",
    "markdown"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://raw.github.com/srackham/rimu-tools/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=0.8"
  },
  "bin": {
    "rimuc": "bin/rimuc.js"
  },
  "files": [
    "bin/rimuc.js",
    "bin/header.rmu",
    "bin/footer.rmu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/srackham/rimu-tools.git"
  },
  "dependencies": {
    "rimu": "^6.1.0"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "tape": "^4.2.0",
    "tslint": "^2.4.5",
    "typescript": "^1.5.3"
  },
  "scripts": {
    "build": "tsc && sed -i '1 s/^\\/\\/ //' bin/rimuc.js",
    "build:watch": "onchange 'src/*.ts' -- npm run build",
    "test": "(node test/test.js | faucet) && tslint src/rimuc.ts",
    "test:watch": "onchange 'test/*.js' 'bin/*.js' -- npm run test",
    "watch": "parallelshell 'npm run build:watch' 'npm run test:watch'"
  }
}
